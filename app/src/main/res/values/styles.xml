<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
    </style>


    <!-- activity main-->

    <style name="loginImgView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">140dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/dp20</item>
    </style>

    <style name="textView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/subtitle</item>
        <item name="android:layout_marginTop">@dimen/dp15</item>
        <item name="android:layout_marginRight">@dimen/dp20</item>
        <item name="android:layout_marginLeft">@dimen/dp20</item>
    </style>

    <style name="editTxt">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/subtitle</item>
        <item name="android:layout_marginRight">@dimen/dp20</item>
        <item name="android:layout_marginLeft">@dimen/dp20</item>
        <item name="android:maxLength">15</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="buttonLogin">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">@dimen/dp20</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginLeft">@dimen/dp20</item>
        <item name="android:background">@drawable/registration_btn_bck</item>
    </style>

    <style name="forgetten">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">@dimen/dp25</item>
        <item name="android:textColor">@color/blue</item>
    </style>


    <!-- Registration page.... -->

    <style name="linear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginRight">@dimen/dp15</item>
        <item name="android:layout_marginLeft">@dimen/dp15</item>
    </style>

    <style name="reg_txtview">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.5</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/subtitle</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="reg_etxt">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">3.5</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">25</item>
    </style>

    <!-- forgetten password activity-->
    <style name="fgtnPassEtxt">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/dp20</item>
        <item name="android:layout_marginRight">@dimen/dp20</item>
        <item name="android:textSize">@dimen/subtitle</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <!-- Splash Screen-->
    <style name="btnSplash">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/dp30</item>
        <item name="android:layout_marginRight">@dimen/dp30</item>
        <item name="android:background">#b19696</item>
        <item name="android:layout_marginTop">@dimen/dp15</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- copy rights-->
    <style name="copyRights">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:text">@string/copy_right</item>
        <item name="android:layout_marginBottom">@dimen/dp20</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:gravity">bottom|center</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- user complaint activity-->
    
    <style name="complaint_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/dp30</item>
        <item name="android:layout_marginLeft">@dimen/dp30</item>
        <item name="android:layout_marginBottom">@dimen/dp20</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>
